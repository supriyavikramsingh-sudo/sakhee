{
  "name": "sakhee-server",
  "version": "1.0.0",
  "description": "Sakhee Backend - Express + LangChain.js",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "dev": "node --watch src/index.js",
    "start": "node src/index.js",
    "test": "vitest",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint --fix src/**/*.js",
    "format": "prettier --write \"src/**/*.{js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,json,md}\"",
    "test:vitest": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "ingest:meals": "node src/scripts/ingestMealTemplates.js",
    "ingest:meals:watch": "node --watch src/scripts/ingestMealTemplates.js",
    "ingest:medical": "node src/scripts/ingestMedicalKnowledge.js",
    "ingest:nutritional": "node src/scripts/ingestNutritionalData.js",
    "ingest:all": "node src/scripts/ingestAll.js",
    "pinecone:clear": "node src/scripts/clear-pinecone.js"
  },
  "dependencies": {
    "@langchain/community": "^0.0.57",
    "@langchain/core": "^0.2.36",
    "@langchain/openai": "^0.0.34",
    "@langchain/pinecone": "^1.0.0",
    "@pinecone-database/pinecone": "^6.1.3",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "docx": "^8.5.0",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "firebase": "^12.4.0",
    "firebase-admin": "^12.7.0",
    "json5": "^2.2.3",
    "langchain": "^0.1.28",
    "mammoth": "^1.6.0",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "openai": "^4.24.1",
    "pdfjs-dist": "^4.0.379",
    "snoowrap": "^1.23.0",
    "tesseract.js": "^5.0.4"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "eslint": "^8.52.0",
    "jest": "^30.2.0",
    "nodemon": "^3.0.2",
    "vitest": "^0.34.6"
  }
}
